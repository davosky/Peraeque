<div class="col-6 offset-3 mt-5 text-center">
  <span class="fw-bold fs-1 text-primary">
    <%= image_tag("icon/profile-icon.svg", class: "img-fluid", alt: "profile-icon.svg") %>
    &nbsp;
    Profilo
  </span>
  <hr class="text-primary"/>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="input-group mb-1">
      <span class="input-group-text input-group-text-fixed bg-primary text-white">
        <i class="fa-solid fa-user"></i>
        &nbsp;&nbsp;
        <%= f.label :email %>
      </span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="input-group mb-1">
      <span class="input-group-text input-group-text-fixed bg-primary text-white">
        <i class="fa-solid fa-key"></i>
        &nbsp;&nbsp;
        <%= f.label :password %>
      </span>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <p>
      <span class="text-info fst-italic fs-6 fw-light">
        lasciare vuoto se non si desidera modificarla
        (minimo <%= @minimum_password_length %> caratteri)
      </span>
    </p>
    <div class="input-group mb-1">
      <span class="input-group-text input-group-text-fixed bg-primary text-white">
        <i class="fa-solid fa-key"></i>
        &nbsp;&nbsp;
        <%= f.label :password_confirmation %>
      </span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <p>
      <span class="text-info fst-italic fs-6 fw-light">
        confermare la nuova password
      </span>
    </p>
    <div class="input-group mb-1">
      <span class="input-group-text input-group-text-fixed bg-primary text-white">
        <i class="fa-solid fa-key"></i>
        &nbsp;&nbsp;
        <%= f.label :current_password %>
      </span>
      <%= f.password_field :current_password, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <p>
      <span class="text-info fst-italic fs-6 fw-light">
        abbiamo bisogno della tua password attuale per confermare le tue modifiche
      </span>
    </p>
    <div class="d-grid mt-3">
      <%= button_tag(type: "submit", class: "btn btn-primary") do %>
        <strong>
          <i class="fa-solid fa-floppy-disk"></i>&ensp;SALVA
        </strong>
      <% end %>
    </div>
  <% end %>
  <hr class="text-primary"/>
  <div class="d-grid mt-3">
    <%= link_to :back, class: "btn btn-outline-info" do %>
      <i class="fa-solid fa-arrow-left"></i>
      &nbsp;
      Torna Indietro
    <% end %>
  </div>
</div>